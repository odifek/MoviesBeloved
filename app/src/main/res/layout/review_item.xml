<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:cardElevation="4dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/author_text" tools:text="Rajh Nakamoto"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" android:textStyle="italic"/>
        <com.techbeloved.moviesbeloved.moviedetails.ExpandableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/review_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="This is a review of this awesome movie. There is a lot one can say about this movie. One, it is very interesting, two it is very engaging, etc"
                android:ellipsize="end"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>